<mah:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        TitleCharacterCasing="Normal"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors" 
        xmlns:local="clr-namespace:ZeikomiTango.Views"
        xmlns:ViewModels="clr-namespace:ZeikomiTango.ViewModels" x:Class="ZeikomiTango.Views.EditWindowV"
        mc:Ignorable="d"
        Title="EditWindowV" Height="450" Width="800">
    <mah:MetroWindow.DataContext>
        <ViewModels:EditWindowVM/>
    </mah:MetroWindow.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Margin="5" Header="リスト">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <DataGrid CanUserAddRows="False" AutoGenerateColumns="False" Margin="5,5,5,5"
                          ItemsSource="{Binding TangoCollection.TangoList.Items}" SelectedItem="{Binding TangoCollection.TangoList.SelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="表示" Binding="{Binding IsDisplay}"/>
                        <DataGridTextColumn Header="問題" Binding="{Binding Querstion}" IsReadOnly="True" Width="300"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <Button Margin="5" Content="追加" Cursor="Hand">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="Click">
                                <b:CallMethodAction TargetObject="{Binding}" MethodName="NewCreate"/>
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </Button>
                </StackPanel>
            </Grid>
        </GroupBox>

        <Grid Margin="5" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <GroupBox Header="Question">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox TextWrapping="WrapWithOverflow" Margin="5,5,5,5" Text="{Binding TangoCollection.TangoList.SelectedItem.Querstion}" AcceptsReturn="True"/>
                    <Grid VerticalAlignment="Center" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <TextBox Margin="5,5,5,5" Grid.Row="0" Text="{Binding TangoCollection.TangoList.SelectedItem.Selections[0]}"/>
                        <TextBox Margin="5,5,5,5" Grid.Row="1" Text="{Binding TangoCollection.TangoList.SelectedItem.Selections[1]}"/>
                        <TextBox Margin="5,5,5,5" Grid.Row="2" Text="{Binding TangoCollection.TangoList.SelectedItem.Selections[2]}"/>
                        <TextBox Margin="5,5,5,5" Grid.Row="3" Text="{Binding TangoCollection.TangoList.SelectedItem.Selections[3]}"/>
                    </Grid>
                </Grid>
            </GroupBox>
            <GroupBox Grid.Row="1" Header="Answer">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="27*"/>
                    </Grid.RowDefinitions>
                    <TextBox Margin="5" Text="{Binding TangoCollection.TangoList.SelectedItem.Answer}"/>
                    <TextBox Margin="5" Text="{Binding TangoCollection.TangoList.SelectedItem.Explanation}" Grid.Row="1"/>
                </Grid>
            </GroupBox>

        </Grid>
    </Grid>
</mah:MetroWindow>
